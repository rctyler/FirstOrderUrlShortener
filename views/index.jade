extends layout
extends navbar

block content
    .row       
       .col-xs-12
            h2 Shorten URL
    .row
       .col-xs-12
            input#inputLongUrl(ng-model='longUrl' ng-change='processLongUrl()' type='text', placeholder='Enter long url' value="{{ longUrl }}", size='43rem')
            a(ng-click="onShorten(longUrl)" id="shortenBtn", class=["btn", "btn-warning", "btn-sm"])= "Shorten"
    .row
        .col-xs-12
            br
    .row
        .col-sm-6.col-xs-12
            +panel("resultsPanel", "Results", "primary") 
                strong Long Url:
                |  <span><a ng-cloak class='link' href='http://{{ longUrl }}'>{{ longUrl }}</a></span>
                br
                
                strong Short Url:
                |  <span><a ng-cloak class='link' href='http://localhost:3000/{{ shortUrlHash }}'>{{ shortUrl }}</a></span>
    .row
        .col-xs-12
            p Use this simple Star Wars themed URL minifier. Your wordspace is valuable, so don't waste it with long urls that demand too much of it! Here's a cool picture... 
            img.starwars.img-responsive.img-rounded(src="http://images5.alphacoders.com/640/640375.jpg")